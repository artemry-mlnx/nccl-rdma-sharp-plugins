podTemplate(cloud:'blossom-cloud', yaml: '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: docker:19.03.1
    command:
    - sleep
    args:
    - 99d
    env:
      - name: DOCKER_HOST
        value: tcp://localhost:2375
  - name: docker-daemon
    image: docker:19.03.1-dind
    securityContext:
      privileged: true
    env:
      - name: DOCKER_TLS_CERTDIR
        value: ""
''') {
    node(POD_LABEL) {
        stage('Build nccl-rdma-sharp-plugins') {
            container('cuda') {
                checkout scm
                echo 'Building nccl-rdma-sharp-plugins...'
                sh """#!/bin/bash
                    set -o pipefail
                    ${WORKSPACE}/.ci/build_nccl_rdma_sharp_plugins.sh 2>&1
                    """
            }
        }
    }
}
